<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Sick Usage Summary</title>
  <style>
    body { margin: 0; font-family: Arial, sans-serif; background-color: #f5f7fa; font-size: 12px; color: #333; }
    h2 { font-size: 20px; margin: 10px; }
    .container { padding: 20px; }
    .table-wrapper { overflow-x: auto; border: 1px solid #ccc; }
    table { width: 100%; border-collapse: collapse; font-size: 12px; min-width: 1000px; }
    thead th { position: sticky; top: 0; background-color: #e1e5ea; z-index: 1; }
    table th, table td { border: 1px solid #ccc; padding: 6px; text-align: center; white-space: nowrap; }
    .highlight { font-weight: bold; background-color: #f2f2f2; }
  </style>
</head>
<body>
  <div class="container">
    <h2>Yearly Sick Day Usage</h2>
    <div class="table-wrapper">
      <table>
        <thead>
          <tr>
            <th>EID</th>
            <th>Name</th>
            <th>Given Sick</th>
            <th>Remain Sick</th>
            <% for (let m = 1; m <= 12; m++) { %>
              <th><%= m %>ì›”</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% summary.forEach(row => { %>
            <tr>
              <td><%= row.eid %></td>
              <td><%= row.name %></td>
              <td><%= row.givensick %></td>
              <td class="highlight"><%= row.remainsick %></td>
              <% for (let m = 1; m <= 12; m++) { %>
                <td><%= row.months[m] || '' %></td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
