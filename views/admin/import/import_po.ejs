                <form method="POST" action="/admin/import_po/delete/<%= po.id %>" onsubmit="return confirm('ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?');">
                  <button type="submit">üóëÔ∏è</button>
                </form>
