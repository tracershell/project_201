<table>
  <thead>
    <tr>
      <th>PO Date</th>
      <th>Vendor</th>
      <th>Style</th>
      <th>PO No</th>
      <th>PCS</th>
      <th>Cost</th>
      <th>PO Amount</th>
      <th>Pre-Deposit</th>
      <th>Deposit</th>
