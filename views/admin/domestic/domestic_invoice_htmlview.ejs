<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Domestic Invoice List</title>
  <style>
    body {
      margin: 20px;
      font-family: Arial, sans-serif;
      background-color: #fff;
      color: #333;
      font-size: 12px;
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 18px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 11px;
      table-layout: fixed;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 4px;
      text-align: center;
      vertical-align: middle;
      word-wrap: break-word;
    }

    th {
      background-color: #f0f8ff;
    }
  </style>
</head>
<body>
  <h2>Domestic Invoice List</h2>

  <table>
    <thead>
      <tr>
        <th>Invoice Date</th>
        <th>Vendor Name</th>
        <th>Invoice No</th>
        <th>Amount</th>
        <th>Note</th>
      </tr>
    </thead>
    <tbody>
      <% invoices.forEach(v => { %>
        <tr>
          <td><%= v.iv_date.toISOString().split('T')[0] %></td>
          <td><%= v.dv_name %></td>
          <td><%= v.di_no %></td>
          <td><%= Number(v.di_amount).toFixed(2) %></td>
          <td><%= v.note %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
