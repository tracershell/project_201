<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Domestic Invoice</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #f5f7fa;
      color: #333;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    .top-section {
      flex: 0 0 20%;
      padding: 0;
      background-color: #f5f7fa;
      overflow-y: auto;
      font-size: 12px;
    }

    .bottom-section {
      flex: 1 1 80%;
      padding: 0;
      overflow-y: auto;
      font-size: 12px;
    }

    h2 {
      margin-bottom: 1rem;
      font-size: 20px;
      color: #333;
    }

    .form {
      width: 100%;
    }

    .form-row {
      display: flex;
      width: 100%;
      gap: 20px;
      margin-bottom: 15px;
    }

    .form input,
    .form select,
    .form textarea {
      padding: 3px;
      font-size: 11px;
      box-sizing: border-box;
      height: 24px;
      border-radius: 3px;
      border: 1px solid #ccc;
    }

    .form-row.second {
      display: flex;
      width: 100%;
      align-items: center;
      gap: 0.5rem;
    }

    button {
      padding: 3px 16px;
      font-size: 11px;
      cursor: pointer;
      border: 1px solid #066da5;
      border-radius: 4px;
      background-color: #f5f7fa;
    }

    .table-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #f5f7fa;
      position: sticky;
      top: 0;
      z-index: 2;
      padding: 10px 0;
    }

    .table-wrapper {
      max-height: 550px;
      overflow-y: auto;
      border: 1px solid #ccc;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 12px;
      white-space: nowrap;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 2px 1px;
      text-align: center;
      vertical-align: middle;
    }

    th {
      background-color: #f0f8ff;
      position: sticky;
      top: 0;
      z-index: 1;
    }

    .form .wide {
      flex: 1 1 30%;
    }
  </style>
</head>
<body>

  <!-- ‚úÖ ÏûÖÎ†• ÏòÅÏó≠ -->
  <div class="top-section compact-form">
    <h2>Invoice ÏûÖÎ†•</h2>
    <form method="POST" action="/admin/domestic_invoice/add" class="form">
      <div class="form-row">
        <input type="date" name="iv_date" value="<%= today %>" required style="flex: 1 1 10%;">
        <select name="dv_name" required style="flex: 1 1 20%;">
          <% vendors.forEach(v => { %>
            <option value="<%= v.v_name %>"><%= v.v_name %></option>
          <% }) %>
        </select>
        <input type="text" name="di_no" placeholder="Invoice No" required style="flex: 1 1 15%;">
        <input type="number" name="di_amount" placeholder="Invoice Amount" step="0.01" required style="flex: 1 1 10%;">
        <textarea name="note" placeholder="Note" class="wide" rows="1"></textarea>
      </div>
      <div class="form-row second" style="justify-content: space-between;">
        <button type="reset">üßπ Ï¥àÍ∏∞Ìôî</button>
        <button type="submit">‚ûï Îì±Î°ù</button>
      </div>
    </form>
  </div>

  <!-- ‚úÖ Î¶¨Ïä§Ìä∏ Î∞è Ï≤òÎ¶¨ Î≤ÑÌäº ÏòÅÏó≠ -->
  <div class="bottom-section">

    <!-- ‚úÖ PDF Î≤ÑÌäºÎì§: Î©îÏù∏ form Î∞îÍπ•Ïóê ÏúÑÏπòÌï¥Ïïº Ìï® -->
    <div style="display: flex; gap: 10px; margin: 10px;">
      <form action="/admin/domestic_invoice_pdf/pdf" method="GET" target="_blank">
        <button type="submit" class="btn-pdf">üìÑ PDF Ï∂úÎ†•</button>
      </form>
      <form action="/admin/domestic_invoice_pdf/pdfdownload" method="GET" target="_blank">
        <button type="submit" class="btn-pdf">‚¨áÔ∏è PDF Îã§Ïö¥Î°úÎìú</button>
      </form>
      <form action="/admin/domestic_invoice/pdfview" method="GET">
        <button type="submit" class="btn-pdf">üëÅÔ∏è PDF Î≥¥Í∏∞ (HTML)</button>
      </form>
    </div>

    <!-- ‚úÖ Î©îÏù∏ form ÏãúÏûë -->
    <form method="POST" action="/admin/domestic_invoice/pay">
      <div class="table-header">
        <h2>Invoice List</h2>
        <div style="display: flex; align-items: center; gap: 10px;">
          <label style="font-size: 12px; font-weight: bold;">Pay Date:</label>
          <input type="date" name="ip_date" value="<%= today %>" required>
          <button type="submit">üí∞ Paid</button>
          <a href="/admin/domestic_invoice/result">
            <button type="button">üìä Result</button>
          </a>
        </div>
      </div>

      <!-- ‚úÖ ÌÖåÏù¥Î∏î wrapper ÏãúÏûë -->
      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <th>Invoice Date</th>
              <th>Vendor Name</th>
              <th>Invoice No</th>
              <th>Amount</th>
              <th>Note</th>
              <th>Pay</th>
              <th>Select</th>
              <th>ÏàòÏ†ï</th>
              <th>ÏÇ≠Ï†ú</th>
            </tr>
          </thead>
          <tbody>
            <% invoices.forEach(inv => { %>
              <tr>
                <td><%= inv.iv_date.toISOString().split('T')[0] %></td>
                <td><%= inv.dv_name %></td>
                <td><%= inv.di_no %></td>
                <td><%= Number(inv.di_amount).toFixed(2) %></td>
                <td><%= inv.note %></td>
                <td>
                  <button type="button" onclick="document.getElementById('pay-<%= inv.id %>').checked = !document.getElementById('pay-<%= inv.id %>').checked;">
                    üí≤
                  </button>
                </td>
                <td>
                  <input type="checkbox" name="paid_ids" value="<%= inv.id %>" id="pay-<%= inv.id %>">
                </td>
                <td>
                  <a href="/admin/domestic_invoice/edit/<%= inv.id %>">
                    <button type="button">‚úèÔ∏è</button>
                  </a>
                </td>
                <td>
                  <form method="POST" action="/admin/domestic_invoice/delete/<%= inv.id %>" onsubmit="return confirm('ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?');">
                    <button type="submit">üóëÔ∏è</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- ‚úÖ ÌÖåÏù¥Î∏î wrapper ÎÅù -->
    </form>
  </div>

  <script>
    // ‚úÖ Enter ÌÇ§Î°ú Îã§Ïùå ÏûÖÎ†• ÌïÑÎìúÎ°ú Ïù¥Îèô
    document.addEventListener('DOMContentLoaded', () => {
      const inputs = document.querySelectorAll('.form input, .form select, .form textarea');

      inputs.forEach((el, index) => {
        el.addEventListener('keydown', (e) => {
          if (e.key === 'Enter') {
            e.preventDefault();
            const next = inputs[index + 1];
            if (next) next.focus();
          }
        });
      });
    });
  </script>
</body>
</html>
