          <td><%= (totalAll.sse || 0).toFixed(2) %></td>
          <td><%= (totalAll.me || 0).toFixed(2) %></td>
          <td><%= (totalAll.caw || 0).toFixed(2) %></td>
          <td><%= (totalAll.cade || 0).toFixed(2) %></td>
