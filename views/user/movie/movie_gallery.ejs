  }

  .video-modal .close-btn {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 1.5rem;
    color: white;
    background: none;
    border: none;
    cursor: pointer;
  }

  .modal-hint {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  color: #ccc;
  font-size: 0.85rem;
